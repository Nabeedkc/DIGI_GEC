<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#ffe6e6e6"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:background="#ff039be5"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="70.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginBottom="20.0dip"
            android:src="@mipmap/ic_launcher_round"
            android:tint="#ffffffff" />

        <android.support.v7.widget.CardView
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            app:cardCornerRadius="6.0dip"
            app:cardElevation="5.0dip">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    android:textColor="#ff1e88e5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="35.0dip"
                    android:text="SIGN IN" />

                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textStyle="bold"
                    android:textColor="#ff999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Registartion ID"/>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/username_entry"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:textColor="#ff1e88e5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-4.0dip"
                    android:layout_marginRight="-4.0dip"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="50" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10.0dip" />
                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textStyle="bold"
                    android:textColor="#ff999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password" />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password_entry"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:textColor="#ff1e88e5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-4.0dip"
                    android:layout_marginRight="-4.0dip"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:inputType="textFilter|textPostalAddress|textWebEmailAddress|textWebPassword|numberDecimal|numberPassword|numberSigned|phone|textAutoComplete|textAutoCorrect|textCapCharacters|textCapSentences|textCapWords|textImeMultiLine|textMultiLine|textNoSuggestions" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10.0dip" />
                <Button
                    android:id="@+id/login_button"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:background="@drawable/btn_rounded_primary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-4.0dip"
                    android:layout_marginRight="-4.0dip"
                    android:text="S I G N  I N"
                    android:textAllCaps="false" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:layout_marginBottom="5.0dip">
                    <TextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#ff90a4ae"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New user? " />
                    <TextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textStyle="bold"
                        android:textColor="#ff1e88e5"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign Up" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>